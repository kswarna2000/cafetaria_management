<!DOCTYPE html>
<html>
  <head>
    <title>CafetariaManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <%if @current_user%>
       <div class="header">
    <p class="logo">Cafeteria Management</p>
    <div class="header-right">
    <p class="nav-text">   <%= link_to "sign-out",destroy_session_path,method: "delete"%> </div> </p>
  </div>
<div class="topnav">
 <a href="/orders">show orders</a>
 <a href="/orders/new">place new order</a>
</div>

  <% end %>

    <% if flash[:error] %>
      <div class="Flash-error">
        <%= flash[:error] %>
      </div>
    <% end %>

    <% if flash[:success] %>
      <p class=Flash-success>
        <%= flash[:success] %>
      </p>
    <% end %>
    <%= yield %>
  </body>
</html>
