<body>
  <div class="content">
    <div class="DisplayOrder">
      <div class="Displaymenu">
        <h1>Your Complaint Orders</h1>
      </div>
      <% Order.where(user_id: @current_user.id, status: "complaint" ).each do |order| %>
        <div class="DisplayOrder-card">
          <div class="DisplayOrder-container">
            <div class="textline10">
              <b>Order id: <b><%= order.id.to_s %></b>
            </div>
            <div class="textline10">
              <b>Order time: <%= order.order_date.to_s(:long) %></b>
            </div>
            <div class="textline10"><b>Delivery status: <%= (order.delivered_at==nil) ?  "Delivery in progress" : "Delivered at #{order.delivered_at.in_time_zone("Chennai").to_s(:long)}" %>
              <% if order.delivered_at != nil %>
                <%= form_with(url: "/orders/#{order.id}", method:"delete") do %>
                  <%= submit_tag "received?" , class: "signup-btn-in3" %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</body>
