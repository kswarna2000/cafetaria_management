<body>
  <!-- Note -->

  <!-- Navigation Bar -->
  <div class="Navbar">
    <a href="#">home</a>
    <a href="#">profile</a>
  </div>

  <!-- The flexible grid (content) -->
  <div class="AddItem">
    <div class="DisplayItem">
      <div class="DisplayItem-welcome">
        <h1>Your Orders</h1>
      </div>
       <% Order.all.each do |order|%>
      <div class="DisplayItem-card">
        <div class="DisplayItem-container">
          <h4>Order id: <b><%=order.id.to_s%></b></h4>
          <h4><b>Order date: <%= order.order_date.to_s(:long) %></b></h4>
          <h4><b>Delivery status: <%= (order.delivered_at==nil) ?  "Delivery in progress" : ordered.delivered_at.to_s %>
        </div>
      </div>
      <%= form_with(url: "/orders", method:"post", class: "AddItem-body") do %>

      <input type="submit" value="Place New Order" class="AddOrder-button" />
    <% end %>
      <% end %>
    </div>
</body>
