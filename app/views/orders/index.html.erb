<body>
  <div class="Navbar">
    <a href="/orderitems/new">show menus</a>
    <a href="/orders">show orders</a>
    <a href="/orders/new">place new order</a>
  </div>

  <!-- The flexible grid (content) -->
  <div class="AddOrder">
    <div class="DisplayOrder">
      <div class="DisplayOrder-welcome">
        <h1>Your Orders</h1>
      </div>
      <% Order.where(delivered_at: nil).each do |order|%>
        <div class="DisplayOrder-card">
          <div class="DisplayOrder-container">
            <h4>Order id: <b><%=order.id.to_s%></b></h4>
            <h4><b>Order date: <%= order.order_date.to_s(:long) %></b></h4>
            <h4><b>Delivery status: <%= (order.delivered_at==nil) ?  "Delivery in progress" : order.delivered_at.to_s %></h4>
          </div>
        </div>
      <% end %>

    </div>
</body>
