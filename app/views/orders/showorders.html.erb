<body>
  <div class="Navbar">
    <a href="/orders/showorders">show orders</a>
    <a href="/menus/new">Create menu</a>
    <a href="/menus">show menus</a>
  </div>

<!-- The flexible grid (content) -->
    <div class="DisplayOrder">
      <div class="DisplayOrder-welcome">
        <h1>Your Orders</h1>
      </div>
      <% Order.where(delivered_at: nil).each do |order|  #getting only undelivered orders%>
        <div class="DisplayOrder-card">
          <div class="DisplayOrder-container">
            <h4>Order id: <b><%=order.id.to_s%></b></h4>
            <h4><b>Order date: <%= order.order_date.to_s(:long) %></b></h4>
            <h4><b>Delivery status: <%= (order.delivered_at==nil) ?  "Delivery in progress" : ordered.delivered_at.to_s %></h4>
            <%= form_with(url: "/orders/#{order.id}", method:"delete") do %>
              <input type="submit" value="Mark as delivered" class="AddItem-button" />
            <%end%>
          </div>

        </div>
     <% end %>
    </div>
</body>
