<body>
  <div class="Navbar">
    <a href="/orders/showorders">show orders</a>
    <a href="/menus/new">Create menu</a>
    <a href="/menus">show menus</a>
  </div>

<!-- The flexible grid (content) -->
    <div class="DisplayOrder">
      <div class="DisplayOrder-welcome">
        <h1>Your Orders</h1>
      </div>
      <% Order.pending_orders.each do |order|  #getting only undelivered orders%>
        <div class="DisplayOrder-card">
          <div class="DisplayOrder-container">
            <h4>Order id: <b><%=order.id.to_s%></b></h4>
            <h4><b>Order time: <%= order.order_date.to_s(:long) %></b></h4>
            <h4><b>Delivery status: <%= (order.delivered_at==nil) ?  "Delivery in progress" : ordered.delivered_at.to_s(:long) %></h4>
             <%= form_with(url: "/orderitems/display", method:"post") do %>
               <%= hidden_field_tag 'order_id', order.id %>
              <%= submit_tag "Show Items" , class: "AddItem-button"%>
            <%end%>

          </div>

        </div>
     <% end %>
    </div>
</body>
