<body>
  </section>
    <div class="content">
      <div class="DisplayOrder">
        <div class="Displaymenu">
          <h1>Edit Item</h1>
        </div>
        <section class="page-heading">
          <%= form_with(url: "/menuitems/#{@update_menuitem.id}", method:"put") do %>
            <div>
              <h2>Item Name:</h2>
              <%= text_field_tag  "item_name", @update_menuitem.item_name, class: "Form-input" %>
            </div>
            <div>
              <h3>Item Description:</h3>
              <%= text_field_tag  "item_description",@update_menuitem.item_description, class: "Form-input" %>
            </div>
            <div>
              <h2>Item Price:</h2>
              <%= text_field_tag  "item_price", @update_menuitem.item_price ,class: "Form-input" %>
            </div>
            <div>
              <h2>Image Url:</h2>
              <%= text_field_tag  "image_url", @update_menuitem.image_url ,class: "Form-input" %>
            </div>
            <%= submit_tag "Update item" , class: "signup-btn-in3" %>
          <% end %>
        </section>
      </div>
    </div>
  </section>
</body>
