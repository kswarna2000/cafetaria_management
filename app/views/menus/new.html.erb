<body>
  <div class="Navbar">
    <a href="/orders/showorders">show orders</a>
    <a href="/menus/new">Create menu</a>
    <a href="/menus">show menus</a>
  </div>

  <!-- The flexible grid (content) -->
  <div class="AddOrder">
    <div class="DisplayOrder">
      <div class="DisplayOrder-welcome">
        <h1>Your Orders</h1>
      </div>
  <%= form_with(url: "/menus", method:"post", class: "AddItem-body") do %>
    <div class="AddItem-container">
        <p class="AddItem-name">Menu Name:</p>
        <%= text_field_tag 'name' ,nil , class: "AddItem-item" %>
      </div>
      <%= submit_tag "Add Items" , class: "AddOrder-button"%>
     <%end%>
     <%if flash[:error]%>
        <p class="Flash-error">
          <%= flash[:error]%>
        </p>
    <%end%>
    </div>



</body>
