<body>
  <div class="content">
    <div class="">
      <div class="DisplayOrder">
        <div class="Displaymenu">
          <h1>Your Menus</h1>
        </div>
        <% Menu.show_menus(@current_user.id).each do |menu| %>
          <div class="">
            <div class="offer-item">
              <img src="/assets/menu-item-thumbnail-03.jpg" alt="">
              <div class=adjustmenu>
                <h3><b>Menu name: <%= menu.name %></b></h3>
                <p>choose any item from menu.</p>
              </div>
              <div>
                <%= form_with(url: "/menus/edit", method:"post") do %>
                  <%= hidden_field_tag 'id', menu.id %>
                  <%= submit_tag "Edit menu" , class: "signup-btn-in1" %>
                <% end %>
                <%= form_with(url: "/menus/#{menu.id}", method:"delete") do %>
                  <%= submit_tag "Delete menu", class: "signup-btn-in2" %>
                <% end %>
                <%= form_with(url: "/menus/status", method:"post") do %>
                 <%= hidden_field_tag 'id', menu.id %>
                 <% if menu.is_active == false %>
                   <%= submit_tag "Set as active", class: "signup-btn-in2" %>
                 <% else %>
                    <%= submit_tag "Set as Inactive", class: "signup-btn-in2" %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</body>
