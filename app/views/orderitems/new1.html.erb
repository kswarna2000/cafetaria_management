<body>

  <div class="DisplayItem-welcome">
    <h1>Welcome Gattu........</h1>
  </div>
  <div class="AddOrderItemContainer">
    <div class="AddOrderItem">
      <h2>Menus</h2>
      <% Menu.all.each do |menu|%>
        <div class="DisplayItem-card">
          <%= form_with(url: "/orderitems/showmenuitems1", method:"post", class: "AddItem-body") do %>
            <div class="DisplayItem-container">
              <h4><b><%=menu.id%></b></h4>
              <%= hidden_field_tag 'menu_item_id', menu.id %>
              <h4><b><%=menu.name%></b></h4>
              <%= submit_tag "Show menu" , class: "AddItem-button"%>
            </div>
          <%end%>
        </div>
      <%end%>
   </div>
  </div>
</body>
