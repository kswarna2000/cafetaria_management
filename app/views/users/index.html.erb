<body>
  <div class="content">
    <div class="DisplayOrder">
      <div class="Displaymenu">
        <h1>Customers</h1>
      </div>
      <% User.where(role: "customer").each do |user| %>
        <div class="DisplayOrder-card">
          <div class="DisplayOrder-container">
            <div class="textline">
              <i><%= user.first_name + user.last_name %></i>
            </div>
            <%= form_with(url: "/users/display", method:"post") do %>
              <%= hidden_field_tag 'id', user.id %>
              <%= hidden_field_tag 'role', "customer" %>
              <%= submit_tag "View details", class: "signup-btn-in6" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
