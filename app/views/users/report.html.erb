<body>
  <div class="DisplayOrder">
    <div class="DisplayOrder-welcome">
      <h1>Order details</h1>
    </div>
    <% User.where(role: "customer").each do |user|  #getting only undelivered orders%>
      <div class="DisplayOrder-card">
        <div class="DisplayOrder-container">
          <h4><b>Customer name:: <%= user.first_name %></b></h4>
          <%= form_with(url: "/orders/customer", method:"post") do %>
            <%= hidden_field_tag 'user_id', user.id %>
            <%= submit_tag "View Orders" , class: "AddItem-button"%>
          <%end%>
        </div>
      </div>
    <% end %>
