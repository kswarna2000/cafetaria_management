<body>


  <div class="content">
    <div class="DisplayOrder">
      <div class="Displaymenu2">
        <h1>Clerks</h1>
      </div>
      <div class="inline">
        <%= image_tag("customer1.jpg",:size => "500x600", :alt => "rss feed") %>
        <div class="secondhalf">
          <% User.where(role: "clerk").each do |user|  #getting only undelivered orders%>
          <div class="DisplayOrder-card">
            <div class="DisplayOrder-container">
              <div class="textline"><b>Name: <%= user.first_name %></b></div>
              <div class="textline"><b> Clerk</b></div>
              <div class=""><%= form_with(url: "/users/display", method:"post") do %>
                <%= hidden_field_tag 'id', user.id %>
                <%= hidden_field_tag 'role', "clerk" %>
                <%= submit_tag "View details" , class: "signup-btn-in10"%>
             <% end%>
              <%= form_with(url: "/users/#{user.id}", method:"delete") do %>
               <%= hidden_field_tag 'id', user.id %>
               <%=submit_tag "Delete", class: "signup-btn-in10"%>
             <% end%>
              </div>
            </div>
          </div>

          <% end %>
          <div>
          </div>
        </div>
</body>
